[
	{
		"defaults": {
			"link": {
				"create": true,
				"relink": true
			}
		}
	},
	{
		"clean": [
			"$HOME",
			"$HOME/.config"
		]
	},
	{
		"link": {
			"$HOME/.config/compton.conf": {
				"force": true,
				"path": "compton/config"
			},
			"$HOME/.config/conky": "conky/",
			"$HOME/.config/gtk-2.0": "gtk-2.0/",
			"$HOME/.config/gtk-3.0": "gtk-3.0/",
			"$HOME/.config/i3": {
				"force": true,
				"path": "i3/"
			},
			"$HOME/.config/sublime-text-3": {
				"force": true,
				"path": "sublime-text-3/"
			},
			"$HOME/.config/terminator": {
				"force": true,
				"path": "terminator/"
			},
			"$HOME/.config/transmission": "transmission/linux/",
			"$HOME/.config/vlc": "vlc/linux/",
			"$HOME/.Xresources": "x/resources",
			"$HOME/.xinitrc": "x/initrc",
			"$HOME/.s3cfg": "s3cmd/s3cfg",
			"$HOME/.rdm/connections.json":"redis/rdm-connections.json"
		}
	}
]
